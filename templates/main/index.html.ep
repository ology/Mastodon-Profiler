% layout 'default';
<form method="post">
  <div class="row">
    <div class="col">
      <input type="profile" class="form-control" id="profile" name="profile" value="<%= $profile %>" placeholder="@user@server.name">
    </div>
    <div class="col">
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </div>
</form>
% if ($response->{display_name}) {
<hr>
<h2><%= $response->{display_name} %> (<%= $response->{username} %>)</h2>
<p><b>Created</b>: <%= $response->{created_at} %></p>
<p><b>Following</b>: <%= $response->{following_count} %>
  / <b>Followers</b>: <%= $response->{followers_count} %></p>
<p><b>Posts</b>: <%= $response->{statuses_count} %></p>
<p><b>Sentiment</b>: <%= sprintf '%.3f', $score %>
% my $count = 0;
% for my $post (@$posts) {
%   $count++;
<p><%= $count %>. <%= $post->{created_at} %>:</p>
  <div class="bkgdcolor">
    <%== $post->{content} %>
  </div>
<p></p>
% }
<p></p>
<img src="<%= $response->{avatar} %>" height="200">
<img src="<%= $response->{header} %>" height="200">
% }
