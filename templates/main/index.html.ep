% layout 'default';
<form method="post">
  <div class="mb-3">
    <label for="url" class="form-label">Profile URL:</label>
    <input type="text" class="form-control" id="url" name="url" value="<%= $url %>" title="<%= $url %>" aria-describedby="urlHelp">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
